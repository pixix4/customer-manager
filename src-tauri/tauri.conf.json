  "productName": "customer-manager",
  "version": "0.1.2",
  "identifier": "de.lars-westermann.customer-manager",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Customer Manager",
        "width": 1000,
        "height": 680,
        "contentProtected": false
      }
    ],
